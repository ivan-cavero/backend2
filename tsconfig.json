{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"lib": ["ES2021"],
		"types": ["bun-types"],
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"jsxImportSource": "hono/jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "tests/**/*"]
}
