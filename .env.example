# Server Configuration
NODE_ENV=development                    # Environment: development, production, or test
PORT=3000                              # Port number for the server
BASE_URL=http://localhost              # Base URL for the server
DEBUG_MODE=true                        # Enable debug mode (defaults to true in development)
ALLOWED_ORIGINS=http://localhost:5173  # Comma-separated list of allowed CORS origins

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key  # Secret key for JWT signing (use a strong random string in production)

# Frontend Configuration
FRONTEND_URL=http://localhost:5173     # URL of the frontend application

# PostgreSQL Configuration
POSTGRES_HOST=localhost                # PostgreSQL host
POSTGRES_PORT=5432                     # PostgreSQL port
POSTGRES_USER=postgres                 # PostgreSQL user
POSTGRES_PASSWORD=your-postgres-password # PostgreSQL password
POSTGRES_DATABASE=timefly              # PostgreSQL database name

# ClickHouse Configuration
CLICKHOUSE_HOST=http://localhost       # ClickHouse host
CLICKHOUSE_TCP_PORT=9000               # ClickHouse TCP port
CLICKHOUSE_HTTP_PORT=8123              # ClickHouse HTTP port
CLICKHOUSE_USER=default                # ClickHouse user
CLICKHOUSE_PASSWORD=your-ch-password   # ClickHouse password
CLICKHOUSE_DATABASE=default            # ClickHouse database name 